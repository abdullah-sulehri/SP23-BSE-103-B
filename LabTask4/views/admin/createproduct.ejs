<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link rel="stylesheet" href="../styles.css">
<link rel="stylesheet" href="<%= styles %>">
<title><%-pageTitle%></title>

<body>
    <div class="form-container">
        <form method="post" enctype="multipart/form-data" action="/admin/products/create" id="CheckoutForm">
            <div class="heading-box">
                <h1>Add Product Form</h1>
            </div>
            <div class="id-field">
                <input id="id" name="id" type="text" class="form-control" placeholder="Id">
                <span id="error-message-id" style="display: none;"> *Product id is Required </span>
            </div>
            <div class="brand-field">
                <input id="brand" name="brand" type="text" class="form-control" placeholder="Brand">
                <span id="error-message-brand" style="display: none;"> *Brand Name is Required </span>
            </div>
            <div class="title-field">
                <input id="title" name="title" type="text" class="form-control" placeholder="Title">
                <span id="error-message-title" style="display: none;"> *Title is Required </span>
            </div>

            <div class="price-field">
                <input id="price" name="price" type="number" class="form-control" placeholder="Price">
                <span id="error-message-price" style="display: none;"> *Price is Required </span>
            </div>

            <div class="description-field">
                <input id="description" name="description" type="text" class="form-control" placeholder="Description">
                <span id="error-message-description" style="display: none;"> *Description is Required </span>
            </div>
            <div class="form-group">
                <label for="categorySelect">Category</label>
                <select id="categorySelect" name="category" class="form-control">
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="fileInput">Picture</label>
                <input name="file" type="file" class="form-control" id="fileInput" />
            </div>

            <!-- New Category Dropdown -->
            

            <input type="submit" id="submit-btn">
        </form>
    </div>
</body>


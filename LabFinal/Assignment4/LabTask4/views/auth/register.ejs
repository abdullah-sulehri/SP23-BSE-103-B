<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    body {
      background: linear-gradient(135deg, #70e1f5, #ffd194); /* Gradient background */
      font-family: 'Poppins', sans-serif;
      margin: 0;
      padding: 0;
    }
    
    .register-container {
      max-width: 400px;
      margin: 100px auto;
      background-color: white;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .register-container:hover {
      transform: translateY(-10px); /* Subtle hover effect */
      box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
    }

    .register-header h2 {
      font-size: 30px;
      color: #333;
      margin-bottom: 15px;
      font-weight: 600;
    }

    .register-header p {
      color: #666;
      font-size: 14px;
    }

    .form-label {
      font-weight: 500;
      color: #333;
      margin-bottom: 8px;
    }

    .form-control {
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      font-size: 16px;
      padding: 12px;
      margin-bottom: 20px; /* Adjust margin to add space between input fields */
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 8px rgba(0, 123, 255, 0.6);
    }

    .btn-info {
      background-color: #007bff;
      color: white;
      border-radius: 5px;
      font-weight: 600;
      padding: 12px;
      border: none;
      width: 100%;
      transition: background-color 0.3s ease;
    }

    .btn-info:hover {
      background-color: #0056b3;
    }

    .text-center {
      margin-top: 20px;
    }

    .text-center a {
      color: #007bff;
      text-decoration: none;
    }

    .text-center a:hover {
      text-decoration: underline;
    }

  </style>

<div class="register-container">
    <div class="register-header">
      <h2>Register</h2>
      <p>Please fill in your details to create an account</p>
    </div>
<form action="" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" value="Abdullah" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="abdullah@gmail.com" required />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" value="aab1234" required />
      </div>

      <div class="mb-3">
        <button type="submit" class="btn btn-info">Register</button>
      </div>

      <div class="text-center">
        <p>Already have an account? <a href="/login">Login here</a></p>
      </div>
</form>
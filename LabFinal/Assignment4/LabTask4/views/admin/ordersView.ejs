<!DOCTYPE html>
<html lang="en">
<head>
  <title>Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css"
    rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <style>
    body {
      background-color: #737070; /* Light grey color */
    }
    .navbar {
      background-color: #040404 !important; /* Darker grey for the navbar */
    }
    .navbar .navbar-brand,
    .navbar .nav-link {
      color: white !important; /* Set navbar text color to white */
    }
    .navbar .nav-link:hover {
      color: #f8f9fa !important; /* Slightly lighter white color on hover */
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary p-20">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">Admin Panel</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/admin/category">Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">Visit Main Site</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <h3>Orders</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Address</th>
        <th>Total Amount</th>
        <th>Order Date and Time</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.customer.name %></td>
          <td><%= order.customer.street + ", " + order.customer.city + ", " + order.customer.postalCode %></td>
          <td>$<%= order.orderTotal.toFixed(2) %></td>
          <td><%= new Date(order.orderDate).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

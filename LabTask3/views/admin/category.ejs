  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Description</th>
        <th>status</th>

        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      <% for( let index=0; index < categories.length; index++ ) { %>
        <tr>
          <td>
            <%= categories[index].id %>
          </td>
          <td>
            <%= categories[index].name %>
          </td>
          <td>
            <%= categories[index].description %>
          </td>
          <td>
            <%= categories[index].status %>
          </td>


          <td>
            <a href="/admin/category/edit/<%= categories[index]._id %>" class="btn btn-warning">Edit</a>
            <a href="/admin/category/delete/<%= categories[index]._id %>" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        <% } %>
